<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainMenuSearch">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/editText"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@drawable/searcj_background"
            android:drawableTint="@android:color/darker_gray"
            android:hint="@string/getsearch"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingStart="80dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="0dp"
            android:privateImeOptions="actionSearch"
            android:singleLine="true"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="22sp" />

        <Button
            android:id="@+id/searchbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00ff0000"
            android:baselineAligned="false"
            android:drawableLeft="@drawable/search_24"
            android:paddingStart="10dp"
            android:textColor="#00897B" />


    </LinearLayout>

    <TextView
        android:id="@+id/titleHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="75dp"
        android:text="@string/medicine_teacher"
        android:textColor="#009688"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="InvalidId" />

    <Button
        android:id="@+id/searchbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#00ff0000"
        android:text="search Shape"
        android:textColor="@color/black" />


</FrameLayout>